!!! 1.1
%html
  %head
    %title= "#{RailsPKI::Config[:name]} - The CA Instance"
    %meta{'http-equiv'=>"content-type", :ontent=>"text/html; charset=iso-8859-1"}/
    %meta{:name=>"description", :content=>"RailsPKI - PKI Implemented in Ruby on Rails"}/
    %meta{:name=>"keywords", :content=>"pki,rails,railspki,ruby"}/
    = stylesheet_link_tag "blue", :media => "screen,projection"
%body
  %div#container
    %div#header
      %h1= RailsPKI::Config[:name]
      %h2 The CA Instance
      %h3= "Logged in as: #{session[:user]}"
    %div#navigation
      %ul
        - if session[:user]
          %li.selected= link_to("Home", :controller=>'ca', :action=>'index')
          %li &nbsp;
          %li= link_to("Change role", :controller=>'auth', :action=>'change_role')
          %li &nbsp;
          %li= link_to("Logout", :controller=>'auth', :action=>'logout')
    %div#content
      = @content_for_layout
      %p &nbsp
    %div#footer
