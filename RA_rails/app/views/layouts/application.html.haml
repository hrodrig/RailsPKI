!!! 1.1
%html
  %head
    %title= "Rheoli - The RA Instance"
    %meta{'http-equiv'=>"content-type", :ontent=>"text/html; charset=iso-8859-1"}/
    %meta{:name=>"description", :content=>"RailsPKI - PKI Implemented in Ruby on Rails"}/
    %meta{:name=>"keywords", :content=>"pki,rails,railspki,ruby"}/
    = stylesheet_link_tag "green", :media => "screen,projection"
    = stylesheet_link_tag 'redbox'
    = javascript_include_tag :defaults
    = javascript_include_tag 'redbox'
%body{:onLoad=>@body_on_load}
  %div#container
    %div#header
      %h1 Rheoli
      %h2 The RA Instance
      %h3= "Logged in as: MyUser"
    %div#navigation
      %ul
        - if session[:user]
          %li.selected= link_to("Home", :controller=>'ra', :action=>'index')
          %li &nbsp;
          %li= link_to("Change role", :controller=>'auth', :action=>'change_role')
          %li &nbsp;
          %li= link_to("Logout", :controller=>'auth', :action=>'logout')
        - else
          %li= link_to("Login", :controller=>'auth', :action=>'login')
    %div#content
      = @content_for_layout
      %p &nbsp
    %div#footer
